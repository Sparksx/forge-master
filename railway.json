{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "DATABASE_URL=postgresql://placeholder:5432/db ./node_modules/.bin/prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "sh scripts/prisma-push-if-changed.sh && node server/index.js",
    "restartPolicyType": "ON_FAILURE"
  }
}
