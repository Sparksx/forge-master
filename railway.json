{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "DATABASE_URL=postgresql://placeholder:5432/db npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "preDeployCommand": ["npx prisma db push"],
    "restartPolicyType": "ON_FAILURE"
  }
}
