{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "preDeployCommand": "prisma db push --accept-data-loss",
    "restartPolicyType": "ON_FAILURE"
  }
}
