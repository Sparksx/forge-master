{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "preDeployCommand": "./node_modules/.bin/prisma db push --accept-data-loss",
    "restartPolicyType": "ON_FAILURE"
  }
}
