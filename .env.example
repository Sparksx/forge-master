# Database (provided by Railway PostgreSQL plugin)
DATABASE_URL=postgresql://user:password@localhost:5432/forgemaster

# JWT secrets (generate random strings for production)
JWT_SECRET=change-me-to-a-random-secret
JWT_REFRESH_SECRET=change-me-to-another-random-secret

# Server
NODE_ENV=development
PORT=3000

# CORS origin (defaults to https://web-production-aeea.up.railway.app in production, * in development)
# CORS_ORIGIN=https://web-production-aeea.up.railway.app

# OAuth — Discord (create an app at https://discord.com/developers/applications)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://your-domain.com/auth/discord/callback

# OAuth — Google (create credentials at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Vite client-side env (prefix with VITE_ so Vite injects them into the frontend build)
VITE_DISCORD_CLIENT_ID=
VITE_GOOGLE_CLIENT_ID=
VITE_DISCORD_REDIRECT_URI=https://your-domain.com/auth/discord/callback
